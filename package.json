{
  "name": "codebox",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:backend": "nodemon server.js",
    "build": "cd client && npm run build",
    "vercel-build": "cd client && npm install && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": ["code-execution", "sandbox", "vercel", "serverless", "react"],
  "author": "",
  "license": "ISC",
  "description": "A secure code execution sandbox built with React and Vercel Serverless Functions",
  "dependencies": {
    "@vercel/sandbox": "^0.0.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/jest.setup.js"],
    "collectCoverageFrom": [
      "routes/**/*.js",
      "codeExecution.js",
      "server.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ]
  }
}
